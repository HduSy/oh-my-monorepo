{
  "compilerOptions": {
    "lib": ["es2017", "DOM"],
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "useUnknownInCatchVariables": false,
    "sourceMap": false,
    "strict": true,
    "moduleResolution": "Node",
    "outDir": "./lib",
    "baseUrl": "./",
    "incremental": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src"
  ]
}
