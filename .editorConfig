# http://editorconfig.org
root = true


[*]
indent_style = space
indent_size = 2 # 用两个空格代替制表符
end_of_line = lf
charset = utf-8 # 设置文件编码为 UTF-8
trim_trailing_whitespace = true # 在保存时删除尾部的空白字符
insert_final_newline = true # 在文件结尾添加一个空白行

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
